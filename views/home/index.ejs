<html>

<head>
	<title>DCS-ERP</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">
	<link href="https://fonts.googleapis.com/css?family=Righteous" rel="stylesheet">
	<style>
		#header-row {
			background-color: #2980b9;
		}

		#heading {
			color: white;
			font-weight: bold;
			font-size: 40px;
			letter-spacing: 2px;
		}

		#login-form {
			margin: 20px 10px 10px 10px;
		}

		#signup-form-div {
			margin-top: 40px;
		}

		#signup-form-div form {
			margin-left: 40px;
			margin-right: 40px;
		}

		body {
			background-image: url('/images/login-page-bg.jpg');
			background-repeat: no-repeat;
			background-size: cover;
		}

		#login-form-div {
			border: 5px solid #2c3e50;
			border-radius: 10px;
			padding: 60px;
			background-color: rgba(255, 255, 255, 0.6);
			margin-top: 100px;
		}

		#title {
			color: #2c3e50;
			font-weight: bold;
			font-family: 'Righteous';
			font-size: 68px;
			letter-spacing: 3px;
			text-align: center;
		}

		 ::placeholder {
			color: #7f8c8d !important;
			opacity: 1;
		}

		 :-ms-input-placeholder {
			/* Internet Explorer 10-11 */
			color: red;
		}

		 ::-ms-input-placeholder {
			/* Microsoft Edge */
			color: red;
		}
	</style>

</head>

<body>

	<div class="container-fluid">

		<div class="col-md-12">

		</div>

		<div id="login-form-div" class="col-md-offset-3 col-md-6">

			<h1 id="title">DCS-ERP</h1>
			<br><br>

			<form id="login-form" class="form-inline text-center" method="post" action="/login">

				<div class="input-group">
					<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
					<input style="padding:10px;" type="text" required placeholder="username" name="username" class="form-control" />
				</div>
				<br><br>

				<div class="input-group">
					<span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
					<input style="padding:10px;" type="password" required placeholder="password" name="password" class="form-control" />
				</div>
				<br><br>

				<input type="submit" id="loginBtn" value="Login" class="btn btn-success" style="width:100%;">
			</form>
		</div>

		<script src="/js/jquery-3.2.1.min.js"></script>
		<script src="/js/bootstrap.min.js"></script>
		<script src="/js/notify.min.js"></script>

		<% if(notify) { %>
			<script>
				$(document).ready(function () {
					$('#title').notify("Account Created, you can login now",
						{
							position: "bottom center",
							className: "success",
						});
				});
			</script>
			<% } %>

				<% if(loginErr){ %>
					<script>
						$(document).ready(function () {
							$('#loginBtn').notify("Wrong username or password",
								{
									position: "bottom center",
									className: "error",
								});
						});
					</script>
					<% } %>

</body>

</html>